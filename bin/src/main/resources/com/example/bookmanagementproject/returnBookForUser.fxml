<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" styleClass="login-form" stylesheets="@loginDesign.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bookmanagementproject.ReturnBookForUser">
   <children>
      <Label fx:id="labelTopReturn" layoutX="126.0" layoutY="25.0" text="Return Book for user" textFill="WHITE">
         <font>
            <Font name="Cochin" size="28.0" />
         </font>
      </Label>
      <VBox layoutX="130.0" layoutY="144.0" prefHeight="83.0" prefWidth="228.0" spacing="35.0">
         <children>
            <TextField fx:id="ISBNfield" promptText="ISBN" styleClass="textfield" />
         </children>
      </VBox>
      <HBox layoutX="130.0" layoutY="227.0" prefHeight="46.0" prefWidth="228.0" spacing="20.0">
         <children>
            <Button fx:id="returnField" mnemonicParsing="false" onAction="#returnSave" prefHeight="44.0" prefWidth="104.0" styleClass="login-save" text="Return" textFill="WHITE">
               <font>
                  <Font name="Cochin" size="19.0" />
               </font>
            </Button>
            <Button fx:id="cancelField" mnemonicParsing="false" onAction="#cancel" prefHeight="44.0" prefWidth="104.0" styleClass="login-cancel" text="Cancel" textFill="WHITE">
               <font>
                  <Font name="Cochin" size="24.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Label layoutX="218.0" layoutY="118.0" text="ISBN" textFill="WHITE">
         <font>
            <Font name="Cochin" size="21.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
