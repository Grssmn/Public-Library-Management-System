               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
            <HBox alignment="CENTER" layoutX="95.0" layoutY="142.0" prefHeight="100.0" prefWidth="671.0" spacing="40.0">
