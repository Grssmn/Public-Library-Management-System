<AnchorPane prefHeight="600.0" prefWidth="986.0" styleClass="allBack" stylesheets="@dashboardAdmin.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bookmanagementproject.DashboardUser">
