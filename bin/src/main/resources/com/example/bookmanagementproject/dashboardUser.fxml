                     <font>
                        <Font name="Cochin" size="24.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="#252d50" iconLiteral="fa-dropbox" />
                     </graphic>
                  </Button>
                  <Button fx:id="search" mnemonicParsing="false" onAction="#searchPressed" prefHeight="63.0" prefWidth="200.0" styleClass="buttons" stylesheets="@dashboardAdmin.css" text="Search">
                     <font>
                        <Font name="Cochin" size="24.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="#252d50" iconLiteral="fa-search" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </AnchorPane>
      <Button fx:id="logout" layoutX="426.0" layoutY="513.0" mnemonicParsing="false" onAction="#logoutPressed" prefHeight="54.0" prefWidth="135.0" styleClass="buttons" stylesheets="@dashboardAdmin.css" text="Log out">
         <font>
            <Font name="Cochin" size="28.0" />
         </font>
         <graphic>
            <FontIcon iconColor="#ff3636" iconLiteral="fa-share" />
         </graphic>
      </Button>
