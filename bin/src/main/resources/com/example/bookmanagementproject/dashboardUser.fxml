      <AnchorPane layoutX="63.0" layoutY="116.0" prefHeight="369.0" prefWidth="861.0">
         <children>
            <HBox alignment="CENTER" layoutX="95.0" layoutY="32.0" prefHeight="100.0" prefWidth="671.0" spacing="40.0">
               <children>
                  <Button fx:id="books" mnemonicParsing="false" onAction="#booksPressed" prefHeight="63.0" prefWidth="135.0" styleClass="buttons" stylesheets="@dashboardAdmin.css" text="Books">
                     <font>
                        <Font name="Cochin" size="24.0" />
                     </font>
